<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_bg_white_gray_brim_det"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/item_love_heal_det_vip_ll_tit_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/item_love_heal_det_vip_iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@mipmap/icon_dialogue_men" />

        <TextView
            android:id="@+id/item_love_heal_det_vip_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="18dp"
            android:layout_weight="10"
            android:maxLines="1"
            android:text="555"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_love_heal_det_vip_tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="8dp"
        android:text="需要购买VIP权限才能查看"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        app:layout_constraintTop_toBottomOf="@+id/item_love_heal_det_vip_ll_tit_con" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/shape_btn_red_crimson_empty_thin"
        android:paddingLeft="32dp"
        android:paddingTop="8dp"
        android:paddingRight="32dp"
        android:paddingBottom="8dp"
        android:text="购买VIP"
        android:textColor="@color/red_crimson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_love_heal_det_vip_tv_des" />

</android.support.constraint.ConstraintLayout>