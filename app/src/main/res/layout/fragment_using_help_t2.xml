<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/using_help_t2_tv_des_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="轻松搜到与之相匹配的回复"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/using_help_t2_iv"
        android:layout_width="300dp"
        android:layout_height="407dp"
        android:scaleType="fitXY"
        android:src="@mipmap/using_help_02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/using_help_t2_tv_des_01" />

    <TextView
        android:id="@+id/using_help_t2_tv_des_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="点击加号，即可复制这句话 "
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        app:layout_constraintRight_toRightOf="@+id/using_help_t2_iv"
        app:layout_constraintTop_toBottomOf="@+id/using_help_t2_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>