<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/rl_recommend_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/tv_recommend_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="今日推荐"
            android:textColor="@color/gray_222222"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_more_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@mipmap/more"
            android:padding="5dp"
            android:text="更多"
            android:textColor="@color/gray_888888"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp">


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <com.yc.verbaltalk.ui.view.RoundCornerImg
                android:id="@+id/roundCornerImg_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/tease_pic_one" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/tease_play" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="告别暧昧，强势进阶两个人的关系，怎么办？"
                android:textColor="@color/gray_222222" />

            <TextView
                android:id="@+id/tv_recommend_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="播放次数：238"
                android:textColor="@color/gray_999999"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/tv_recommend_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_edebeb" />


</LinearLayout>