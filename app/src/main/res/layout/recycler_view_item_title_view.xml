<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--android:src="@mipmap/main_bg_title"-->
    <!--android:src="@mipmap/main_bg_title" -->
    <ImageView
        android:id="@+id/item_title_view_iv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/main_bg_title" />

    <View
        android:id="@+id/item_title_view_view_temp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/item_title_view_iv_title" />

    <!-- android:layout_alignEnd="@id/item_title_view_iv_title"-->
    <LinearLayout
        android:id="@+id/item_title_view_ll_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title_view_view_temp"
        android:orientation="vertical">

        <com.yc.love.ui.view.MainNavigationLin
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            app:textName="恋爱帮手" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@mipmap/main_img_card_01" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@mipmap/main_img_card_02" />
        </LinearLayout>

        <com.yc.love.ui.view.MainNavigationLin
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            app:textName="恋爱心机" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_title_view_rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="709px">

        <ImageView
            android:id="@+id/item_title_view_iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_bg_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:paddingBottom="7dp"
            android:text="66666"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:paddingBottom="7dp"
            android:src="@mipmap/main_icon_share" />
    </RelativeLayout>
</RelativeLayout>