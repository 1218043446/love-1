<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_title_view_iv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/main_bg_title" />


    <ImageView
        android:id="@+id/item_title_view_iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bg_share"
        app:layout_constraintBottom_toBottomOf="@id/item_title_view_iv_title"
        app:layout_constraintLeft_toLeftOf="@id/item_title_view_iv_title"
        app:layout_constraintRight_toRightOf="@id/item_title_view_iv_title"
        app:layout_constraintTop_toBottomOf="@id/item_title_view_iv_title" />

    <TextView
        android:id="@+id/item_title_view_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="6dp"
        android:text="请输入关键词搜索聊天术语"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="@id/item_title_view_iv_share"
        app:layout_constraintLeft_toLeftOf="@id/item_title_view_iv_share"
        app:layout_constraintTop_toTopOf="@id/item_title_view_iv_share" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/main_icon_share"
        app:layout_constraintBottom_toBottomOf="@id/item_title_view_iv_share"
        app:layout_constraintRight_toRightOf="@id/item_title_view_iv_share"
        app:layout_constraintTop_toTopOf="@id/item_title_view_iv_share" />

    <LinearLayout
        android:id="@+id/item_title_view_ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="12dp"
        android:paddingRight="4dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title_view_iv_share">

        <TextView
            android:id="@+id/item_title_t1_tv_icon_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/main_icon_t3_01"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="单身期"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_title_t1_tv_icon_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/main_icon_t3_02"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="追求期"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_title_t1_tv_icon_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/main_icon_t3_03"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="热恋期"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_title_t1_tv_icon_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/main_icon_t3_04"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="失恋期"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_title_t1_tv_icon_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/main_icon_t3_05"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="婚后期"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_title_view_ll_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/item_title_view_ll_category">

        <com.yc.love.ui.view.MainNavigationLin
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            app:textName="恋爱帮手" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/item_title_view_iv_module_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@mipmap/main_img_card_01" />

            <ImageView
                android:id="@+id/item_title_view_iv_module_03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@mipmap/main_img_card_02" />
        </LinearLayout>

        <com.yc.love.ui.view.MainNavigationLin
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            app:textName="恋爱心机" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>