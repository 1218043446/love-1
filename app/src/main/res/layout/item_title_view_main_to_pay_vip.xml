<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_main_to_pay_vip_ll_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_gray_circular"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_main_to_pay_vip_tv_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="您当前最多可查询15条实战话术"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_main_to_pay_vip_tv_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="升级VIP可解锁全部聊天实战话术及20W+搜索话术！"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            app:layout_constraintTop_toBottomOf="@+id/item_main_to_pay_vip_tv_01" />

        <TextView
            android:id="@+id/item_main_to_pay_vip_tv_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_btn_red_crimson_gray"
            android:paddingLeft="28dp"
            android:paddingTop="6dp"
            android:paddingRight="28dp"
            android:paddingBottom="6dp"
            android:text="一键升级"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_main_to_pay_vip_tv_02" />

        <View
            android:id="@+id/item_main_to_pay_vip_tv_04"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@+id/item_main_to_pay_vip_tv_03" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/item_main_to_pay_vip_ll_con" />


</android.support.constraint.ConstraintLayout>